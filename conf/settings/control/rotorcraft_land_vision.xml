<!DOCTYPE settings SYSTEM "../settings.dtd">

<settings>
  <dl_settings>

	<dl_settings NAME="Vision Loop">
      <dl_setting var="activate_opticflow_hover" min="0" step="1" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="hover" param="VISION_HOVER" values="FALSE|TRUE"/>
		<dl_setting var="vision_phi_pgain" min="0" step="1" max="10000" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="kp_v_phi" param="VISION_PHI_PGAIN"/>
		<dl_setting var="vision_phi_igain" min="0" step="1" max="1000" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="ki_v_phi" param="VISION_PHI_IGAIN"/>
		<dl_setting var="vision_theta_pgain" min="0" step="1" max="10000" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="kp_v_theta" param="VISION_THETA_PGAIN"/>
		<dl_setting var="vision_theta_igain" min="0" step="1" max="1000" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="ki_v_theta" param="VISION_THETA_IGAIN"/>
        <dl_setting var="vision_land_pgain" min="0" step="0.001" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="kp_land_v" param="VISION_LAND_PGAIN"/>
		<dl_setting var="vision_div_const" min="-1" step="0.1" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_control" shortname="div_const" param="VISION_DIV_CONST"/>  
      <dl_setting var="train_dictionary" min="0" step="1" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_code" shortname="dictionary" param="VISION_TRAIN_DICTIONARY" values="FALSE|TRUE"/>
      <dl_setting var="extract_distribution" min="0" step="1" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_code" shortname="histogram" param="VISION_EXTRACT_DISTRIBUTION" values="FALSE|TRUE"/>
      <dl_setting var="snapshot" min="0" step="1" max="1" module="../ext/ardrone2_vision/modules/OpticFlow/opticflow_code" shortname="photo" param="VISION_SNAPSHOT" values="FALSE|TRUE"/>  
	  </dl_settings>
  </dl_settings>
</settings>
